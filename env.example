# ============================================================================
# Aegra - Environment Variables Configuration
# ============================================================================
# Copy this file to .env and update the values according to your environment
# cp env.example .env

# ============================================================================
# Core Server Configuration
# ============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (true/false)
DEBUG=false

# ============================================================================
# Database Configuration
# ============================================================================

# Main PostgreSQL database URL for Aegra (LangGraph checkpoints and metadata)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/aegra

# Enable SQLAlchemy query echo (useful for debugging)
DATABASE_ECHO=false

# ============================================================================
# Authentication Configuration
# ============================================================================

# Authentication type: "noop" (no auth) or "custom" (custom auth)
# Set to "noop" for development, "custom" for production with auth.py
AUTH_TYPE=noop

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Environment mode: LOCAL, DEVELOPMENT, STAGING, PRODUCTION
ENV_MODE=LOCAL

# Log verbosity: "standard" or "verbose"
LOG_VERBOSITY=standard

# ============================================================================
# Observability (Langfuse)
# ============================================================================

# Enable Langfuse logging (true/false)
LANGFUSE_LOGGING=false

# ============================================================================
# Soporte ODS - Production Database (MODE 1)
# ============================================================================

# Production database URL for external SQL Server database
# Format examples:
#   SQL Server: mssql+pyodbc://user:password@host:port/database?driver=ODBC+Driver+17+for+SQL+Server
#   PostgreSQL: postgresql+asyncpg://user:password@host:port/database
PROD_DB_URL=

# Production API base URL
PROD_API_BASE_URL=https://api.pedidosya.com

# ============================================================================
# Soporte ODS - Staging Database (MODE 2)
# ============================================================================

# Staging database URL for external SQL Server database
# Format examples:
#   SQL Server: mssql+pyodbc://user:password@host:port/database?driver=ODBC+Driver+17+for+SQL+Server
#   PostgreSQL: postgresql+asyncpg://user:password@host:port/database
STAGING_DB_URL=

# Staging API base URL
STAGING_API_BASE_URL=https://staging-api.pedidosya.com

# ============================================================================
# OpenAI Configuration (for RAG and other AI features)
# ============================================================================

# OpenAI API key (required for ChromaDB embeddings and other AI features)
OPENAI_API_KEY=

# ============================================================================
# Advanced Configuration
# ============================================================================

# Path to Aegra configuration file (optional, defaults to aegra.json)
AEGRA_CONFIG=aegra.json

# Base URL for Aegra server (used in tests and external references)
AEGRA_BASE_URL=http://localhost:8000

# Server URL (used in E2E tests)
SERVER_URL=http://localhost:8000

